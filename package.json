    "testAuth": "copy .env_test .env && jest --detectOpenHandles --forceExit ./src/tests/auth.test.ts",
    "testPost": "copy .env_test .env && jest --detectOpenHandles --forceExit ./src/tests/post.test.ts",
    "lint": "eslint . --ext .ts"
